<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BetaBook.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BetaBook.UI"
    xmlns:pages="clr-namespace:BetaBook.UI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="BetaBook.UI"
>
    <TabBar>
        <Tab Title="Home"
             Icon="climbing_icon.svg"
             Route="home">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Beta"
             Icon="climbing_icon.svg"
             Route="beta">
            <ShellContent ContentTemplate="{DataTemplate pages:BetaPage}" />
        </Tab>
    </TabBar>

</Shell>
